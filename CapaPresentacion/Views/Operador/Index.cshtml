@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="es-ec">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-1">
                <div class="col-sm-12 text-center btn-info">
                    <h4>Reconocimiento del Certificado de Explotador de Servicios Aéreos (AOCR)</h4>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Botón Nueva Solicitud -->
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button type="button" class="btn btn-outline-success dropdown-toggle" data-toggle="dropdown">
                                NUEVA SOLICITUD
                            </button>
                            <div class="dropdown-menu">
                                <a id="btnEmisionAOCR" class="text-blue dropdown-item" href="#">EMISIÓN AOCR</a>
                                <div class="dropdown-divider"></div>
                                <a class="text-blue dropdown-item" href="/Ambitos/Formulario_Cancelacion?oidSol=-1">MODIFICACIÓN AOCR</a>
                                <div class="dropdown-divider"></div>
                                <a class="text-blue dropdown-item" href="/Ambitos/Formulario_Actualizacion?oidSol=-1">RENOVACIÓN AOCR</a>
                            </div>
                        </div>
                        <input type="text" class="form-control" placeholder="Buscar solicitud...">
                    </div>

                    <!-- Tabla de solicitudes -->
                    <div class="card card-default">
                        <div class="card-body">
                            <table id="tablaSolicitudes" class="table table-bordered table-striped table-sm" style="width:100%; font-size:12px;">
                                <thead class="thead-light">
                                    <tr class="text-center">
                                        <th>Oid</th>
                                        <th>Fecha Solicitud</th>
                                        <th>Tipo Solicitud</th>
                                        <th>Estado Solicitud</th>
                                        <th>Compañía Operadora</th>
                                        <th>Inspector Asignado</th>
                                        <th>No. Autorización</th>
                                        <th>Fecha Aprobación</th>
                                        <th>Registro AOCR</th>
                                        <th>Estado Autorización</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                            <!-- Loader -->
                            <div id="loader" class="text-center my-4" style="display:none;">
                                <div class="spinner-border text-info" role="status">
                                    <span class="sr-only">Cargando...</span>
                                </div>
                                <p>Cargando datos, por favor espere...</p>
                            </div>
                        </div>
                    </div>

                    <!-- Modal para Formulario -->
                    <div class="modal fade" id="modalFormulario" tabindex="-1" role="dialog" aria-labelledby="tituloModal" aria-hidden="true">
                        <div class="modal-dialog modal-xl" role="document">
                            <div class="modal-content">
                                <div class="modal-header bg-info text-white">
                                    <h5 class="modal-title" id="tituloModal">Formulario Emisión AOCR</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body" id="contenidoModal">
                                    <!-- Aquí se cargará el Formulario -->
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Librerías necesarias -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Script para acciones -->
    <script src="@Url.Content("~/Scripts/Views/Operador_Index.js")" type="text/javascript"></script>

    <!-- Script para abrir el Modal -->
    <script>
        $(document).ready(function () {
            // Nueva Solicitud
            $('#btnEmisionAOCR').on('click', function (e) {
                e.preventDefault();
                cargarFormulario(null);
            });

            // Simulación de acción Consultar 
            window.consultarSolicitud = function (id) {
                cargarFormulario(id);
            }

            function cargarFormulario(idSolicitud) {
                $('#contenidoModal').html(`
                    <div class="text-center my-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Cargando...</span>
                        </div>
                        <p>Cargando formulario...</p>
                    </div>
                `);

                $.ajax({
                    url: '@Url.Action("FormularioEmisionAOCR", "Operador")',
                    type: 'GET',
                    data: { oid: idSolicitud },
                    success: function (data) {
                        $('#contenidoModal').html(data);
                        $('#modalFormulario').modal('show');
                    },
                    error: function () {
                        $('#contenidoModal').html('<div class="alert alert-danger">Error al cargar el formulario.</div>');
                    }
                });
            }
        });
    </script>
</body>
</html>
