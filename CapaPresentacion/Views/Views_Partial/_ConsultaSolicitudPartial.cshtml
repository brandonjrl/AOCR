<div class="container mt-4">
    <div class="row">
        <!-- Menú de Pasos -->
        <div class="col-md-3">
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-explotador-list" data-toggle="list" href="#explotador" role="tab">1. Explotador-Solicitante</a>
                <a class="list-group-item list-group-item-action" id="list-aeronaves-list" data-toggle="list" href="#aeronaves" role="tab">2. Información de las Aeronaves</a>
                <a class="list-group-item list-group-item-action" id="list-operaciones-list" data-toggle="list" href="#operaciones" role="tab">3. Operaciones EAE en el Ecuador</a>
                <a class="list-group-item list-group-item-action" id="list-anexos-list" data-toggle="list" href="#anexos" role="tab">4. Anexos</a>
            </div>
        </div>

        <!-- Contenido de los pasos -->
        <div class="col-md-9">
            <div class="tab-content" id="nav-tabContent">

                <!-- Paso 1 -->
                <div class="tab-pane fade show active" id="explotador" role="tabpanel">
                    <h5 class="mb-3 font-weight-bold">Datos del Explotador-Solicitante</h5>
                    <div style="max-height: 40vh; overflow-y: auto; padding: 15px 10px;">
                        <form id="formExplotador">
                            <div class="form-group"><label>Nombre de la Compañía *</label><input type="text" class="form-control" id="nombreCompania" readonly></div>
                            <div class="form-group"><label>Dirección de la Compañía</label><input type="text" class="form-control" id="direccionCompania" readonly></div>
                            <div class="form-group"><label>Teléfono de la Compañía</label><input type="text" class="form-control" id="telefonoCompania" readonly></div>
                            <div class="form-group"><label>Correo de la Compañía</label><input type="email" class="form-control" id="correoCompania" readonly></div>
                            <hr class="my-4" />
                            <h5 class="mb-3 font-weight-bold">Punto de Contacto en Ecuador</h5>
                            <div class="form-group"><label>Nombre del Representante Legal</label><input type="text" class="form-control" id="nombreRepresentante" readonly></div>
                            <div class="form-group"><label>RUC</label><input type="text" class="form-control" id="rucRepresentante" readonly></div>
                            <div class="form-group"><label>Dirección en Ecuador</label><input type="text" class="form-control" id="direccionEcuador" readonly></div>
                            <div class="form-group"><label>Teléfono en Ecuador</label><input type="text" class="form-control" id="telefonoEcuador" readonly></div>
                            <div class="form-group"><label>Email en Ecuador</label><input type="email" class="form-control" id="emailEcuador" readonly></div>
                        </form>
                    </div>
                </div>

                <!-- Paso 2 -->
                <div class="tab-pane fade" id="aeronaves" role="tabpanel">
                    <h5 class="mb-3 font-weight-bold">Información de las Aeronaves</h5>
                    <div style="max-height: 40vh; overflow-y: auto; padding: 15px 10px;">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover table-sm" id="tablaAeronaves" style="font-size: 13px;">
                                <thead class="thead-light text-center">
                                    <tr>
                                        <th>Fabricante</th>
                                        <th>Modelo</th>
                                        <th>Serie</th>
                                        <th>Matrícula</th>
                                        <th>Configuración</th>
                                        <th>Etapa de Ruido</th>
                                        <th>Peso</th>
                                        <th>Designador OACI</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="form-group mt-3">
                            <label>Resumen de Aeronaves (por Fabricante/Modelo)</label>
                            <textarea class="form-control" id="contadorAeronaves" rows="3" readonly disabled style="background-color: #f8f9fa; resize: none;"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Paso 3 -->
                <div class="tab-pane fade" id="operaciones" role="tabpanel">
                    <h5 class="mb-3 font-weight-bold">Operaciones en el Ecuador</h5>
                    <div style="max-height: 40vh; overflow-y: auto; padding: 15px 10px;">
                        <div class="form-group"><label>Fecha propuesta de inicio de operaciones</label><input type="date" class="form-control" id="fechaInicioOperaciones" readonly></div>
                        <div class="form-group"><label>Tipos de operación</label><textarea class="form-control" id="tiposOperacion" rows="3" readonly disabled style="background-color: #f8f9fa; resize: none;"></textarea></div>
                        <div class="form-group"><label>Resumen de operaciones</label><textarea class="form-control" id="resumenOperaciones" rows="3" readonly></textarea></div>
                        <div class="form-group"><label>Aeropuertos dentro del Ecuador</label><textarea class="form-control" id="aeropuertosEcuador" rows="3" readonly disabled style="background-color: #f8f9fa; resize: none;"></textarea></div>
                    </div>
                </div>

                <!-- Paso 4 -->
                <div class="tab-pane fade" id="anexos" role="tabpanel">
                    <h5 class="mb-3 font-weight-bold">Anexos Requeridos</h5>
                    <div style="max-height: 40vh; overflow-y: auto; padding: 15px 10px;">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-sm" id="tablaAnexos" style="font-size: 13px;">
                                <thead class="thead-light text-center">
                                    <tr><th>Nombre Documento</th><th>Visualizar</th><th>Descargar</th></tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
