@{
    ViewBag.Title = "_ModalRegistroUsuario";
    bool soloLectura = ViewBag.SoloLectura != null && (bool)ViewBag.SoloLectura;
}

<div class="modal fade" id="modalRegistroUsuario" tabindex="-1" role="dialog" aria-labelledby="registroUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <form id="crearForm" enctype="multipart/form-data">
                <div class="modal-header">
                    <div class="col-sm-12 text-center">
                        <img src="/Content/imganes/logo_header.png" style="width:180px; height:5em" />
                    </div>
                </div>

                <div class="modal-body" style="font-size:14px;">
                    <p class="login-box-msg"> Información de Usuario</p>

                    <div class="form-group row">
                        <label for="Correo" class="col-sm-4 col-form-label">Correo electrónico:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm" type="email" id="Correo" name="Correo" required @(soloLectura ? "readonly" : "") />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4">Tipo identificación:<span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TipoIdentificacion" value="CI" id="TipoIdentificacionC" @(soloLectura ? "disabled" : "")>
                                <label class="form-check-label" for="TipoIdentificacionC">Cédula</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TipoIdentificacion" value="PS" id="TipoIdentificacionP" @(soloLectura ? "disabled" : "")>
                                <label class="form-check-label" for="TipoIdentificacionP">Pasaporte</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="CedulaIdentificacion" class="col-sm-4 col-form-label">Cédula/Pasaporte:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="CedulaIdentificacion" name="CedulaIdentificacion" required @(soloLectura ? "readonly" : "") />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="NombreUsuario" class="col-sm-4 col-form-label">Nombres:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="NombreUsuario" name="NombreUsuario" required @(soloLectura ? "readonly" : "") />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="ApellidoUsuario" class="col-sm-4 col-form-label">Apellidos:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="ApellidoUsuario" name="ApellidoUsuario" required @(soloLectura ? "readonly" : "") />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Empresa" class="col-sm-4 col-form-label">Empresa:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <select class="form-control form-control-sm" id="Empresa" name="Empresa" @(soloLectura ? "disabled" : "")>
                                <option value="">-- Seleccione una empresa --</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Rol" class="col-sm-4 col-form-label">Rol en la empresa:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <select class="form-control form-control-sm" id="Rol" name="Rol" @(soloLectura ? "disabled" : "")>
                                <option value="">-- Seleccione un Rol --</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row" id="otroRolContainer" style="display: none;">
                        <label for="OtroRol" class="col-sm-4 col-form-label">Especifique el rol:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="OtroRol" name="OtroRol" placeholder="Ingrese el rol personalizado" @(soloLectura ? "readonly" : "") />
                        </div>
                    </div>

                    @* Campo de archivo adjunto si aplica *@
                    @if (ViewBag.MostrarArchivoLegal != null && (bool)ViewBag.MostrarArchivoLegal)
                    {
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Archivo representante legal:<span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                @if (soloLectura && !string.IsNullOrEmpty(ViewBag.ArchivoLegalUrl as string))
                                {
                                    var archivoNombre = ViewBag.ArchivoLegalNombre as string ?? "archivo.pdf";

                                    <div class="input-group">
                                        <input type="text" class="form-control form-control-sm" readonly value="@archivoNombre" />
                                        <div class="input-group-append">
                                            <a class="btn btn-outline-info btn-sm" href="@ViewBag.ArchivoLegalUrl" target="_blank">
                                                <i class="fa fa-eye"></i> Ver
                                            </a>
                                            <a class="btn btn-outline-secondary btn-sm" href="@ViewBag.ArchivoLegalUrl" download>
                                                <i class="fa fa-download"></i> Descargar
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <input type="file" class="form-control form-control-sm" id="ArchivoRepresentante" name="ArchivoRepresentante" accept=".pdf" @(soloLectura ? "disabled" : "") />
                                }
                            </div>
                        </div>
                    }



                    <div class="form-group row">
                        <samp>Campos con "</samp><span class="text-danger">*</span><samp>" son obligatorios</samp>
                    </div>
                </div>

                @* Botones ocultos si es solo visualización *@
                @if (!soloLectura)
                {
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary btn-sm d-flex align-items-center" data-dismiss="modal">
                            <img src="/Content/imganes/cancel.png" alt="Cancelar" class="me-2" style="width: 20px; height: 20px;" />
                            Cancelar
                        </button>

                        <button type="submit" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                            <img src="/Content/imganes/save.png" alt="Registrar" class="me-2" style="width: 20px; height: 20px;" />
                            Registrar
                        </button>
                    </div>
                }
            </form>
        </div>
    </div>
</div>
