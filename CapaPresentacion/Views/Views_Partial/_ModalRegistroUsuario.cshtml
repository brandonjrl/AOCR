
@{
    ViewBag.Title = "_ModalRegistroUsuario";
}

<div class="modal fade" id="modalRegistroUsuario" tabindex="-1" role="dialog" aria-labelledby="registroUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <form id="crearForm" enctype="multipart/form-data">
                <div class="modal-header">
                    <div class="col-sm-12 text-center">
                        <img src="/Content/imganes/logo_header.png" style="width:180px; height:5em" />
                    </div>
                </div>
                <div class="modal-body" style="font-size:14px;">
                    <p class="login-box-msg"> Información de Usuario</p>
                    <div class="form-group row">
                        <label for="Correo" class="col-sm-4 col-form-label">Correo electrónico:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm" type="email" id="Correo" name="Correo" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4">Tipo identificación:<span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TipoIdentificacion" value="CI" id="TipoIdentificacionC">
                                <label class="form-check-label" for="TipoIdentificacionC">Cédula</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TipoIdentificacion" value="PS" id="TipoIdentificacionP">
                                <label class="form-check-label" for="TipoIdentificacionP">Pasaporte</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CedulaIdentificacion" class="col-sm-4 col-form-label">Cédula/Pasaporte:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="CedulaIdentificacion" name="CedulaIdentificacion" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="NombreUsuario" class="col-sm-4 col-form-label">Nombres:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="NombreUsuario" name="NombreUsuario" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ApellidoUsuario" class="col-sm-4 col-form-label">Apellidos:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="ApellidoUsuario" name="ApellidoUsuario" required />
                        </div>
                    </div>
                    @* Campos solo visibles desde Login *@
                    @if (ViewBag.EsDesdeLogin != null && (bool)ViewBag.EsDesdeLogin)
                    {
                        <div class="form-group row">
                            <label for="Empresa" class="col-sm-4 col-form-label">Empresa:<span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                <select class="form-control form-control-sm" id="Empresa" name="Empresa">
                                    <option value="">-- Seleccione una empresa --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Rol" class="col-sm-4 col-form-label">Rol en la empresa:<span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                <select class="form-control form-control-sm" id="Rol" name="Rol">
                                    <option value="">-- Seleccione un Rol --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row" id="otroRolContainer" style="display: none;">
                            <label for="OtroRol" class="col-sm-4 col-form-label">Especifique el rol:<span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control form-control-sm" id="OtroRol" name="OtroRol" placeholder="Ingrese el rol personalizado">
                            </div>
                        </div>

                    }
                    <div class="form-group row">
                        <samp>Campos con "</samp><span class="text-danger">*</span><samp>" son obligatorios</samp>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm d-flex align-items-center" data-dismiss="modal">
                        <img src="/Content/imganes/cancel.png" alt="Cancelar" class="me-2" style="width: 20px; height: 20px;" />
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                        <img src="/Content/imganes/save.png" alt="Registrar" class="me-2" style="width: 20px; height: 20px;" />
                        Registrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
